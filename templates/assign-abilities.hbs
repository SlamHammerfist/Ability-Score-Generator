<div class="assign-abilities">
  <div class="mode-row">
    <label for="mode-select">Mode:</label>
    <select id="mode-select">
      <option value="roll" {{#ifEquals mode "roll"}}selected{{/ifEquals}}>Roll</option>
      <option value="standard" {{#ifEquals mode "standard"}}selected{{/ifEquals}}>Standard Array</option>
      <option value="pointbuy" {{#ifEquals mode "pointbuy"}}selected{{/ifEquals}}>Point Buy</option>
    </select>
  </div>

  <div id="score-table"></div>

  <div id="assign-buttons" class="button-row">
    <button id="roll-btn" type="button">Roll</button>
    <button id="reset-btn" type="button">Reset</button>
    <button id="apply-btn" type="button">Apply</button>
  </div>
</div>